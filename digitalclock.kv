#:kivy 1.10.1

<DigitalClock>:
    canvas.before:
        Color:
            rgba: root.colour, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    id: clock

    Label:
        id: 'clock_time'
        text: self.parent.display_time
        font_size: 180
        opacity: self.parent.clock_view
        size_hint_y: 1

    Label:
        id: "AM_PM_CLOCK"
        opacity: self.parent.am_pm_clock
        text: self.parent.am_pm_clock_text
        font_size: 35
        size_hint: .15, .15
        pos_hint: {'x': .8, 'y': .45}

    Label:
        id: 'alarm_time'
        opacity: self.parent.settings_view
        text: str(self.parent.alarm_time)
        font_size: 140
        size_hint_y: 1

    #Label:
    #    text: "Alarm"
    #    font_size: 25
    #    pos_hint: {'x': .42, 'y': .47}

    Button:
        id: 'button_settings'
        size_hint: .15, .2
        pos_hint: {'x': 0, 'y': .8}
        on_press: root.click_settings(*args)
        background_normal: self.parent.settings_pic
        background_down: self.parent.settings_pic

    Label:
    	text: "Time Format"
    	size_hint: .15, .12
    	pos_hint: {'x': self.parent.clock_view + .015, 'y': .6}
    	font_size: 25

    Button:
        id: "12HR_24HR"
        on_press: root.click_12hr(*args)
        opacity: 1
        size_hint: .15, .12
        pos_hint: {'x': self.parent.clock_view, 'y': .5}
        text: self.parent.hr_text
        font_size: 30
        background_color: .2, .7, 1, self.parent.hr_setting

    Button:
        id: "AM_PM_ALARMTIME"
        on_press: root.alarm_am_pm(*args)
        opacity: 1
        size_hint: .15, .15
        pos_hint: {'x': self.parent.am_pm_alarm - 0.2, 'y': .45}
        text: self.parent.am_pm_text
        font_size: 35
        background_color: 0, .5, self.parent.am_pm_setting, self.parent.am_pm_setting

    Button:
        opacity: self.parent.is_alarming
        text: "ALARM\nOFF"
        font_size: 25
        size_hint: .15, .2
        pos_hint: {'x': 0, 'y': self.parent.is_alarming - 0.2}
        on_press: root.cancel_func()

    Button:
        opacity: self.parent.is_alarming
        text: "SNOOZE"
        font_size: 30
        size_hint: .3, .15
        pos_hint: {'x': .35, 'y': .85}
        on_press: root.snooze_func()

    Button:                                 #Alarm On/Off Switch
        id: 'button_active'                 #
        font_size: 20
        size_hint: .15, .1
        text: self.parent.switch_text
        pos_hint: {'x': .85, 'y': .9}
        background_normal: ''
        background_color: self.parent.alarm_switch, 0, 0 ,1
        on_press: root.switch_state()

    Button:
        name: 'hour10_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 15
        size_hint: .12, .15
        pos_hint: {'x': .21, 'y': .6}
        on_release:
            root.hour10_up()

    Button:
        name: 'hour1_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 15
        size_hint: .12, .15
        pos_hint: {'x': .34, 'y': .6}
        on_release: root.hour1_up()

    Button:
        name: 'min10_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 15
        size_hint: .12, .15
        pos_hint: {'x': .54, 'y': .6}
        on_release: root.min10_up()

    Button:
        name: 'min1_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 10
        size_hint: .12, .15
        pos_hint: {'x': .67, 'y': .6}
        on_release: root.min1_up()

    Button:
        name: 'hour10_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .12, .15
        pos_hint: {'x': .21, 'y': .25}
        on_release: root.hour10_dn()

    Button:
        name: 'hour1_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .12, .15
        pos_hint: {'x': .34, 'y': .25}
        on_release: root.hour1_dn()

    Button:
        name: 'min10_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .12, .15
        pos_hint: {'x': .54, 'y': .25}
        on_release: root.min10_dn()

    Button:
        name: 'min1_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .12, .15
        pos_hint: {'x': .67, 'y': .25}
        on_release: root.min1_dn()

    Button:
        id: 'sunday'
        opacity: 1
        text: "S"
        font_size: 20
        size_hint: .1, .12
        pos_hint: {'x': .15, 'y': 0}
        on_press: root.press_sunday(*args)
        background_color: self.parent.set_sunday, 0, 0, self.parent.set_sunday

    Button:
        id: 'monday'
        opacity: 1
        text: "M"
        font_size: 20
        size_hint: .1, .12
        pos_hint: {'x': .25, 'y': 0}
        on_press: root.press_monday(*args)
        background_color: self.parent.set_monday, 0, 0, self.parent.set_monday

    Button:
        id: 'tuesday'
        opacity: 1
        text: "T"
        font_size: 20
        size_hint: .1, .12
        pos_hint: {'x': .35, 'y': 0}
        on_press: root.press_tuesday(*args)
        background_color: self.parent.set_tuesday, 0, 0, self.parent.set_tuesday

    Button:
        id: 'wednesday'
        opacity: 1
        text: "W"
        font_size: 20
        size_hint: .1, .12
        pos_hint: {'x': .45, 'y': 0}
        on_press: root.press_wednesday(*args)
        background_color: self.parent.set_wednesday, 0, 0, self.parent.set_wednesday

    Button:
        id: 'thursday'
        opacity: 1
        text: "T"
        font_size: 20
        size_hint: .1, .12
        pos_hint: {'x': .55, 'y': 0}
        on_press: root.press_thursday(*args)
        background_color: self.parent.set_thursday, 0, 0, self.parent.set_thursday

    Button:
        id: 'friday'
        opacity: 1
        text: "F"
        font_size: 20
        size_hint: .1, .12
        pos_hint: {'x': .65, 'y': 0}
        on_press: root.press_friday(*args)
        background_color: self.parent.set_friday, 0, 0, self.parent.set_friday

    Button:
        id: 'saturday'
        opacity: 1
        text: "S"
        font_size: 20
        size_hint: .1, .12
        pos_hint: {'x': .75, 'y': 0}
        on_press: root.press_saturday(*args)
        background_color: self.parent.set_saturday, 0, 0, self.parent.set_saturday

    Label:
        id: 'current_day'
        opacity: 1
        text: self.parent.curr_day_name
        font_size: 60
        size_hint: .1, .12
        pos_hint: {'x': .45, 'y': .12}

    Slider:
        id: slider
        min: 0
        max: 100
        step: 1
        size_hint: .4, .1
        pos_hint: {'x': .3, 'y':self.parent.clock_view + .85}
        value: self.parent.curr_vol
        on_touch_up: root.vol_change(self.value)

    Label:
    	id: volume
        opacity: 1
        text: "Volume"
        font_size: 20
        size_hint: .4, .12
        pos_hint: {'x': .3, 'y':self.parent.clock_view + .9}

