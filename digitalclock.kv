#:kivy 1.10.1


<DigitalClock>:
    id: clock

    Label:
        id: 'clock_time'
        text: self.parent.display_time
        font_size: 100
        opacity: self.parent.clock_view
        enabled: 1
        size_hint_y: 1


    Label:
        id: 'alarm_time'
        opacity: self.parent.settings_view
        text: str(self.parent.alarm_time_hour).zfill(2) + " : " + str(self.parent.alarm_time_minute).zfill(2)
        font_size: 100
        size_hint_y: 1


    Label:
        text: "Alarm"
        font_size: 25
        pos_hint: {'x': .45, 'y': .48}

    ToggleButton:
        id: 'button_settings'
        text: "Settings"
        font_size: 10
        size_hint: .1, .1
        pos_hint: {'x': 0, 'y': .9}
        on_state: root.click_settings(*args)


    Switch:                                 #Alarm On/Off Switch
        id: 'button_active'                 #
        font_size: 10
        size_hint: .1, .1
        pos_hint: {'x': .9, 'y': .89}        #
        background_color: 0, 0, 0 ,0
        on_active: root.switch_state(*args)

    Button:
        name: 'hour10_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .3, 'y': .6}
        on_release:
            root.hour10_up()

    Button:
        name: 'hour1_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .38, 'y': .6}
        on_release: root.hour1_up()

    Button:
        name: 'min10_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .54, 'y': .6}
        on_release: root.min10_up()

    Button:
        name: 'min1_up'
        opacity: self.parent.settings_view
        text: "+"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .62, 'y': .6}
        on_release: root.min1_up()

    Button:
        name: 'hour10_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .3, 'y': .3}
        on_release: root.hour10_dn()

    Button:
        name: 'hour1_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .38, 'y': .3}
        on_release: root.hour1_dn()

    Button:
        name: 'min10_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .54, 'y': .3}
        on_release: root.min10_dn()

    Button:
        name: 'min1_dn'
        opacity: self.parent.settings_view
        text: "-"
        font_size: 10
        size_hint: .08, .1
        pos_hint: {'x': .62, 'y': .3}
        on_release: root.min1_dn()

    Button:
        opacity: 0
        disabled: 1
        text: "Set"
        size_hint: .1, .1
        pos_hint: {'x': .24, 'y': -.04}
        on_release:
            self.text = 'Alarm Set'

